#!/bin/bash
. "$(dirname "$0")/common"
. "$(dirname "$0")/defaults"
. "$(dirname "$0")/starbound-bootstrap-shared"

main() {
  info "Running starbound-bootstrap"
  prepareStarboundAppFolders
  updateOrCreateStarboundServerConfig
  prepareSteamA2sPythonLibrary
  bootstrapHook

  initCrontab
  supervisorctl start starbound-updater
  
  # If OpenStarbound is enabled, trigger its updater during bootstrap
  if [ "${USE_OPENSTARBOUND:-false}" == "true" ]; then
    info "OpenStarbound is enabled - triggering updater"
    supervisorctl start openstarbound-updater
  fi
  
  info "Bootstrap complete"
}

main
